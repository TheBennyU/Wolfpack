<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Wolfpack.AddPlayersPage">
	<ContentPage.Content>
		<StackLayout Padding="20">
			<ListView x:Name="PlayerView"
					SeparatorVisibility="Default" 
					Footer=""
					RowHeight="30">
				
			<ListView.Header>
	           <Label Text="Noms des joueurs" 
					  Font="Large"
			          HorizontalOptions="Center" />
	        </ListView.Header>
				
		    <ListView.ItemTemplate>
	          <DataTemplate>
	            <EntryCell Placeholder="Joueur" Text="{Binding DisplayName}" />
	          </DataTemplate>
	        </ListView.ItemTemplate>


	  		</ListView>

			<Button x:Name="btnAddPlayer" Text="Ajouter un joueur" Clicked="btnAddPlayer_Clicked" />
			<Button x:Name="btnStart" Text="Débuter la partie" Clicked="btnStart_Clicked" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
