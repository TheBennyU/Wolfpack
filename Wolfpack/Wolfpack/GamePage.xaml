<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Wolfpack.GamePage">
	<ContentPage.Content>
		<StackLayout x:Name="slChallenge" Spacing="10">
			<Label x:Name="Event" Text="Place pour le texte la" 
			   VerticalOptions="CenterAndExpand"
			   HorizontalOptions="CenterAndExpand" />
			<!-- Faudrait faire que ca se fasse en cliquant n'importe ou mais j'ai pas trop
			check comme l'faire la -->
			<Button x:Name="btnNext" Text="Next" Clicked="btnNext_Clicked" />
			<Button x:Name="btnNewGame" Text="Nouvelle partie" Clicked="btnNewGame_Clicked" IsVisible="false" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
